<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quizzerapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/bchele_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bchele_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".SplashScreenActivity" android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>

                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RecActivity" />
        <activity android:name=".BookmarkActivity" />
        <activity android:name=".ScoreActivity" />
        <activity android:name=".QuestionActivity" />
        <activity android:name=".SetsActivity" />
        <activity android:name=".CategoryActivities" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>